<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {% block title %}
        HB Corp
      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>" />
    {% block stylesheets %}

    {% endblock %}

    {% block javascripts %}
      {% block importmap %}
        {{ importmap('app') }}
      {% endblock %}
    {% endblock %}
  </head>
  <body class="min-h-screen text-white bg-gray-900">
    <header>{{ include('nav.html.twig') }}</header>
    <div class="container mx-auto mt-4 px-6">
      {% for message in app.flashes('success') %}
        <div class="bg-green-600 text-white px-4 py-2 rounded mb-4 shadow">{{ message }}</div>
      {% endfor %}
      {% for message in app.flashes('error') %}
        <div class="bg-red-600 text-white px-4 py-2 rounded mb-4 shadow">{{ message }}</div>
      {% endfor %}
    </div>

    <main class="flex-1 container mx-auto px-6 py-8">
      {% block body %}

      {% endblock %}
    </main>
  </body>
</html>
