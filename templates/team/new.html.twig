{% extends 'base.html.twig' %}

{% block title %}
  Nouvelle équipe
{% endblock %}

{% block body %}
  <h1 class="text-2xl font-bold mb-4">Créer une nouvelle équipe</h1>

  {{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}
  <div class="mb-4">{{ form_row(form.name) }}</div>
  <div class="mb-4">{{ form_row(form.imageFile) }}</div>
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Créer l’équipe</button>
  {{ form_end(form) }}
{% endblock %}
