{% extends 'base.html.twig' %}

{% block title %}
  Inscription
{% endblock %}

{% block body %}
  <h1 class="text-2xl font-bold mb-6">Créer un compte</h1>

  {{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}
  <div class="mb-4">{{ form_row(form.username) }}</div>
  <div class="mb-4">{{ form_row(form.email) }}</div>
  <div class="mb-4">{{ form_row(form.plainPassword) }}</div>
  <div class="mb-4">{{ form_row(form.iconFile) }}</div>
  <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">S’inscrire</button>
  {{ form_end(form) }}
{% endblock %}
